<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cjp.db.mapper.DeveloperUserMapper">

    <select id="count" resultType="java.lang.Long">
        SELECT count(*) FROM developer
        <where>
            <if test="active != null">active = #{active},</if>
            <if test="createTime != null">create_time &lt;= #{createTime}</if>
        </where>
    </select>

    <update id="update">
        update developer
        <set>
            <if test="nickname != null">nickname = #{nickname},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="email != null">email = #{email},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="active != null">active = #{active},</if>
            <if test="skills != null">skills = #{skills},</if>
            <if test="experienceYears != null">experience_years = #{experienceYears},</if>
            <if test="password != null">password = #{password},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        where id = #{id}
    </update>
</mapper>